<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myselectback_re"
    tools:context=".my_s_read">

    <Button
        android:id="@+id/button13"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/readbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button14"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/unreadbtn"
        android:onClick="my_s_unp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/repic1"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_column="1"
                android:layout_row="0"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="5dp"
                android:src="@drawable/re_picture1" />


            <ImageView
                android:id="@+id/repic2"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_column="1"
                android:layout_row="1"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="5dp"
                android:src="@drawable/re_picture2" />


            <ImageView
                android:id="@+id/repic3"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="5dp"
                android:layout_column="2"
                android:layout_row="0"
                android:src="@drawable/re_picture3" />


            <ImageView
                android:id="@+id/repic4"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_column="2"
                android:layout_row="1"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="5dp"
                android:src="@drawable/re_picture4"/>

            <ImageView
                android:id="@+id/repic5"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_column="1"
                android:layout_row="3"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="5dp"
                android:src="@drawable/re_picture5"/>


        </GridLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>